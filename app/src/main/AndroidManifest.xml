<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".firebase.LoginMejorAppTGrupoB"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MejorAppTGrupoB"
        tools:targetApi="31">
        <activity
            android:name=".screens.userGuideScreen.UserGuideActivity"
            android:exported="false"
            android:label="@string/title_activity_user_guide"
            android:theme="@style/Theme.MejorAppTGrupoB" />
        <activity
            android:name=".screens.loginScreen.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.MejorAppTGrupoB"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".screens.firstScreen.FirstActivity"
            android:exported="false"
            android:label="@string/title_activity_first"
            android:theme="@style/Theme.MejorAppTGrupoB" />
        <activity
            android:name=".screens.infoScreen.InfoActivity"
            android:exported="false"
            android:label="@string/title_activity_info"
            android:theme="@style/Theme.MejorAppTGrupoB" />
        <activity
            android:name=".screens.testScreen.TestActivity"
            android:exported="false"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.MejorAppTGrupoB" />
        <activity
            android:name=".screens.registerScreen.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.MejorAppTGrupoB"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MejorAppTGrupoB">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>